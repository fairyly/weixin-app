.fixbottom{
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    top:0;
    z-index: 9999;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    border: none;
}
.fixedinput{
    display: block;
    position: absolute;
    right: 0;
    bottom: 0rpx;
    left: 0rpx;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    border: none;
    border-radius:3px;
    background-color: #effbec;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    padding: 5px 10px;
}
.inputborder{
    display: inline-block;
    vertical-align: top;
    width: 80%;
    height: 80rpx;
    border: 0.5rpx solid #cccccc;
    border-radius:3px;
}
.fixedinput input{
    float: left;
    width:80%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 10px;
    -webkit-user-modify: read-write-plaintext-only;
}
.fixedinput  button{
    display: inline-block;
    vertical-align: top;
    height: 80rpx;
    line-height: 80rpx;
    float: right;
}
