.edit1{
    width: 80%;
    height: 34.5rem;
    margin:10px auto;
    /*background-color: #eeeeee;*/
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    /*overflow: hidden;*/
}
.edit1-con{
    width: 100%;
    margin:0px auto;
    overflow: hidden;
    position: relative;
}
.edit1-con1{
    width: 100%;
    height: 290px;
    overflow: hidden;
    position: relative;
    z-index: 1;
}
.edit1-con1img{
    width: 100%;
    position: absolute;
    top: 0px;
    left: 0px;
    z-index: 1;
    text-align: center;
}
.edit1-con1img image{
    width:95%;
    height: 420px;
}
p{
    display: block;
    -webkit-user-modify: read-write;
    word-wrap: break-word;
    -webkit-line-break: after-white-space;
}
p:focus{
    outline: #FFFBE6 solid 2px;
}
.edit1-con2{
    width: 72%;
    height: 4rem;
    margin: 0px auto;
    padding: 10px;
    background-color: #fff100;
    position: relative;
   margin-top: -2rem;
    text-align: center;
    z-index: 3;
}
.edit1-con2 p{
    display: block;
    text-align: center;
    font-family: "Microsoft Yahei";
    color: #000000;
    font-size: 0.5em;
}
.edit1-con2 .edit1-con2p1{
    font-size: 0.85em;
}
.edit1-con2 .edit1-con2p2{
    font-size: 1.5em;
}
.edit1-con2 .edit1-con2p3{
    width: 81%;
    height: 1rem;
    line-height: 1rem;
    margin: 0px auto;
    border-top: 1px solid #000000;
}
.edit1-con3{
    width:100%;
    height: 285px;
    background-color: #ffffff;
    margin-top: -3rem;
    text-align: center;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    padding-top: 3rem;
}
.edit1-con3 label{
    font-size: 0.6em;
}
.edit1-con3 p{
    width: 98%;
    margin: 0px auto;
    font-family: "Microsoft Yahei";
    font-size: 0.7em;
}
.edit1-con3 image{
    width: 6rem;
    height: 6rem;
}
.up1{
    width: 3rem;
    height: 3rem;
    position: absolute;
    top: 26.3rem;
    left: 6.5rem;
}
.up1 image{
    width:3rem;
    height: 3rem;
}
.create{
    width: 100%;
    height: 60px;
    margin: 0px auto;
    text-align: center;
}