/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.tip {
	width: 100%;
	text-align: center;
}
.tip text {
	font-size: 10px;
	color: #cdcdcd;
}

.contain-module {
	width: 100%;
	margin-top: 45px;
	padding: 5px;
	
	border: 1px solid #eee;
	border-radius: 3px;
	box-shadow: 0px 0px 1px 1px #eeeeee;
	box-sizing: border-box;
}
.title {
	width:100%;
	display:block;
	height: 35px;
	line-height: 35px;
	text-align: center;
	font-size: 14px;
	font-weight: bold;
}
.mod_search_inner {
	position: relative;
}
.id-card {
	height: 290px;
}
.input-btn {
	/*position: absolute;
	top: 6.5px;
	right: 0px;
	width:50px;
	height: 30px;*/
	text-align: center;
	border: 1px solid #1aad19;
	border-radius: 2px;
	font-size: 14px;
	color: #ffffff;
	background-color: #1aad19;
	outline: none;
}
.text {
	width: 100%;
	height: 35px;
	line-height: 35px;
	text-align: left;
	font-size: 14px;
	border-bottom: 1px solid #dedede;
}

.sel-tip {
	font-size: 14px;
	color: #bdbdbd;
	float: right;
}

.telephone {
	height: 150px;
}
.tel-phone {
	font-size: 14px;
	color: #222;
}
.tel-phone text {
	font-size: 14px;
	color: #bdbdbd;
}
.tel-phone text.phone-num {
	font-size: 14px;
	color: #333333;
}

.tecknoledge {
	height: 176px;
	text-align: center;
	color: #959595;
}


.qcode {
	width: 100%;
	text-align: center;
}
.tecknoledge .qcode image {
	width: 128px;
	height: 128px;
}

.info-li {
	font-size:10px;
	width:100%;
	overflow:hidden;
	color:#333;

}

.serv {
	position: fixed;
	right: 15px;
	bottom: 130px;
	width:40px;
	height: 40px;
	background-color: #bcbcbc;
	border-radius: 50%;
	z-index:0;
}
.serv image {
	position: fixed;
	right: 20px;
	bottom: 135px;
	width:30px;
	height: 30px;
	z-index:1;
}

.serv contact-button {
	position: fixed;
	right: 15px;
	bottom: 130px;
	z-index: 2;
	width:40px;
	height: 40px;
	opacity: 0;
}
