/* 空列表页面 */
.null-content {
  position: relative;
  width: 100%;
  background: #fff;
  text-align: center;
}
.null-box {
  position: absolute;
  top: 40%;
  left: 50%;
  transform: translate(-50%,-50%)
}
.null-text {
  font-size: 26rpx;
  color: #848689;
  margin-top: 20px;
}
.null-content .null-data-icon .iconfont {
  font-size: 92rpx;
  color: #999;
}
.null-btn{
  height: 38px;
  line-height: 38px;
  /*border:1rpx solid #f64e4e;*/
  color:#f64e4e;
  border-radius:2px;
  margin-top:22px;
  font-size:15px;
  position: relative;
}
.null-btn::after {
  content: '';
  width: 200%;
  height: 200%;
  position: absolute;
  top: 0;
  left: 0;
  border: 1px solid #f64e4e;
  border-radius: 4px;
  -webkit-transform: scale(0.5);
  transform: scale(0.5);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
}

