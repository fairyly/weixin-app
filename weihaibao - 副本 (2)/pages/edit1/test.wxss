.container{
    display: inline-block;
    box-sizing: border-box;
    width: 100%;
    margin: 0px auto;
    text-align: center
}
.list{
    column-count: 2;
    column-gap: 3px;
    width: 100%;
}
.item{
    width: 90%;
    background: #fefefe;
    border: 2px solid #fcfcfc;
    box-sizing: border-box;
    box-shadow: 0 1px 1px -2px rgba(0, 0, 0, 0.3),0 -1px 2px rgba(0, 0, 0, 0.3), 0 1px 2px rgba(34, 25, 25, 0.4);
    margin: 5px 2px 2px 2px;
    padding: 1px;
    padding-bottom: 5px;
    transition: opacity .4s ease-in-out;
    display: inline-block;
}
.item image{
    width: 90%;
  display: inline-block;
}